<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlayButton">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/play_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="ExitButton">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/exit_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="GridElement">
        <item name="backgroundTint">@null</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/grid_element</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>